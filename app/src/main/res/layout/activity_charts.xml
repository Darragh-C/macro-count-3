<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:fitsSystemWindows="true"
        app:elevation="0dip"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@color/colorPrimary" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/caloriesProgressBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_start_margin"
        tools:text="Calories"
        android:paddingTop="10dp"
        android:paddingLeft="@dimen/list_start_margin"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        />

    <ProgressBar
        android:id="@+id/caloriesProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="325dp" />

    <TextView
        android:id="@+id/proteinProgressBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_start_margin"
        tools:text="Protein"
        android:paddingTop="10dp"
        android:paddingLeft="@dimen/list_start_margin"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        />

    <ProgressBar
        android:id="@+id/proteinProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="325dp" />

    <TextView
        android:id="@+id/carbsProgressBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_start_margin"
        tools:text="Carbs"
        android:paddingTop="10dp"
        android:paddingLeft="@dimen/list_start_margin"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        />

    <ProgressBar
        android:id="@+id/carbsProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="325dp" />

    <TextView
        android:id="@+id/fatProgressBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_start_margin"
        tools:text="Fat"
        android:paddingTop="10dp"
        android:paddingLeft="@dimen/list_start_margin"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        />

    <ProgressBar
        android:id="@+id/fatProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="325dp" />

    <lecho.lib.hellocharts.view.PieChartView
        android:id="@+id/pieChartView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true" />

</LinearLayout>